programa
{
		// Faça um algoritmo para ler o raio de um círculo. Em seguida calcule e mostre a sua área
		// A = pi * (R * R) 
	
	funcao inicio()
	{
		real raio, area, pi
			
		escreva("Digite o valor do raio de um círculo: ")
		leia(raio)

		pi = 3.14
		area = pi * (raio * raio)

		escreva("O valor da área do círculo é: ", area)
		
	}
}
